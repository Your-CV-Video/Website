---
const { label, type = "button", onClick, variant = "primary" } = Astro.props;
const buttonClass = variant === "primary" 
  ? "bg-blue-600 hover:bg-blue-700 text-white" 
  : "bg-gray-500 hover:bg-gray-600 text-white";
---

<button 
  type={type} 
  onclick={onClick} 
  class={`w-full p-2 rounded-md ${buttonClass}`}
>
  {label}
</button>
