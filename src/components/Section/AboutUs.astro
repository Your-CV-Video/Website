---
import Section from "./Section.astro";
const { relativeClass = "" } = Astro.props;
const audienceSections = [
    {
        title: "For Recruitment Agencies",
        subtitle: "Save Time. Find the Best Talent.",
        description:
            "Quickly identify top talent with Human-AI powered pre-screening. Automate CV filtering, save hours per hire, and focus on the best candidates while reducing bias.",
        image: "./images/recruitment-agencies.png",
        cta: "Learn More",
    },
    {
        title: "For Hiring Companies",
        subtitle: "Efficient Hiring. Stronger Teams.",
        description:
            "Make smarter hiring decisions with  Human-AI driven insights. Assess skills, personality, and cultural fit before interviews, ensuring stronger teams and lower turnover.",
