---

<Layout>
    <section class="relative py-18">

        <!-- Dark background -->
        <div class="absolute inset-0 bg-slate-900 pointer-events-none -z-10" aria-hidden="true"></div>
 
            <div class="relative max-w-7xl mx-auto px-4  sm:px-6">
      
                <article class="max-w-sm mx-auto space-y-5 md:max-w-none md:flex md:items-center md:space-y-0 md:space-x-8 lg:space-x-16">
                     <!-- Content -->
                     <div class="md:w-1/2 aos-init aos-animate" data-aos="fade-up">
                        <header>
                            <h2 class="h2 md:text-4xl lg:text-5xl font-playfair-display mb-3">
                                <span class="text-slate-100 " >Experience the Full Potential with a <span class="text-emerald-500">14-Day Free Trial</span> </span>
                            </h2>
                        </header>
                        <p class="text-xl text-slate-400 mb-8">Try our 14-day free trial and experience how Human-AI Synergy streamlines recruitment, enhances candidate selection, and improves hiring decisions—no commitment, just value.</p>
                        <a href="/register-recruiter" class="btn text-white bg-blue-600 hover:bg-blue-700 mr-4">Start Your Trial</a>
                        <a href="/pricing" class="btn text-white ">Our Pricing <span class="tracking-normal text-blue-300 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out ml-1">-&gt;</span></a>
                    </div>
                    <!-- Image -->
                    <span class="relative block group overflow-hidden md:w-1/2 aos-init aos-animate" data-aos="fade-down">
                        <img class="w-full aspect-16/9 md:aspect-27/17 object-cover group-hover:scale-105 transition duration-700 ease-out" src="/images/blog-post-01.jpg" width="540" height="340" alt="News 01">
                      
                    </span>
                   
                </article>
             

            </div>
       
    </section>
    <section class="realtive py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <SectionHeader
            title="Streamline Recruitment with YourCVVideo"
            desc="Streamline hiring with Human-AI Synergy powered video tools. Manage talent, track progress, and collaborate seamlessly for faster, smarter recruitment."
        />

        <div
        class="max-w-xl mx-auto md:max-w-none flex flex-col md:flex-row md:items-start md:space-x-8 lg:space-x-16 xl:space-x-18 space-y-8 space-y-reverse md:space-y-0"
        x-data="{ tab: '1' }"
    >

    <div class="md:w-7/12 lg:w-1/2 aos-init aos-animate" data-aos="fade-up">
          
        <!-- Tabs buttons -->
        <div class="mb-8 md:mb-0">
            {currentFeatures.map((feature:any) => (
                 <button
                           
                           :class={`tab !== '${feature.c}' ? 'border-transparent ' : 'border-2 border-blue-500 '`}
                           class="flex w-full items-start  text-left bg-white border-2 px-5 py-4  rounded-lg shadow-md transition duration-300 ease-in-out mb-3"
                           @click={`tab = '${feature.c}'`}
                       >
                        <div class="flex items-center">
                          <img src={feature.icon} class="mr-4" alt="" width="40" height="40">
                           <div>
                               <div class="text-lg text-slate-800 font-semibold">
                                   {feature.heading}
                               </div>
                               {/* <div class="text-slate-500">{feature.content}</div> */}
                           </div>
                       </button>
                    </div>
            ))}
        </div>
    </div>
        <!-- Tabs items (images) -->
        <div
            class=" md:w-5/12 lg:w-1/2 order-1 md:order-none aos-init aos-animate"
            data-aos="fade-down"
        >
            <div class="relative flex flex-col">
                {currentFeatures.map((feature:any) => (
                    <div
                     
                        class="w-full"
                        x-show={`tab === '${feature.c}'`}
                        x-transition:enter="transition ease-in-out duration-700 transform order-first"
                        x-transition:enter-start="opacity-0 -translate-y-16"
                        x-transition:enter-end="opacity-100 translate-y-0"
                        x-transition:leave="transition ease-in-out duration-300 transform absolute"
                        x-transition:leave-start="opacity-100 translate-y-0"
                        x-transition:leave-end="opacity-0 translate-y-16"
                        class=""
                    >
                        <div class="shadow-md py-8 px-8 rounded-3xl">
                            <h2 class="h4 mb-4">{feature.main.title}</h2>
                            <p class="text-slate-500 text-lg">{feature.main.content}</p>
                        </div>
                     
                     
                    </div>
                ))}
            </div>
        </div>

        <!-- Content -->
      
    </div>

    </section>

    <section class="relative bg-slate-50 py-12">
