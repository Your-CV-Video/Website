---
const { image, header, title, tags = [], day, desc, posted,location,link='/job-details',feature='' } = Astro.props;
import HeartEmptyIcon from "../svg/HeartEmptyIcon.astro";
import MapMarkerIcon from "../svg/MapMarkerIcon.astro";
import HeartIcon from "../svg/HeartIcon.astro";
---

<article
    class="relative p-6 md:px-8 aos-init aos-animate border-2 border-slate-200 rounded-sm hover:border-blue-700 hover:bg-slate-50 cursor-pointer"
    x-data
    @click={`window.location.href = '${link}'`}
>
    <div class="flex">
        <!-- Job Icon -->
        <div
            class="flex items-center shrink-0 pr-6 sm:pr-8 sm:mr-6 sm:border-r border-slate-100 company-logo"
        >
            <img src={image} class="icon-size-70" alt={header} />
        </div>

        <!-- Job Content -->
        <div class="grow ">
          
            { feature !=''&& ( <div class="absolute top-0 right-0 mr-4 -mt-4">
                <div class="inline-flex text-sm font-semibold py-1 px-3 text-emerald-700 bg-emerald-200 rounded-full">{feature}</div>
            </div>)}
            <h2 class="h4 font-playfair-display mb-2 text-blue-600">{title}</h2>
            <p class="mb-3 text-slate-500 text-sm" >1 week ago by <a class="text-blue-600 font-semibold hover:underline" href="">{header}</a> </p>
            <p class="text-slate-600 mb-3">{desc}</p>
            {/* Job Tags */}
            <div class="flex flex-wrap mt-3">
                {
                    tags.map((tag: any) => (
                        <div class="inline-flex text-xs py-px px-4 text-slate-800 bg-slate-100 rounded-full mr-3 mb-2">
                            {tag}
                        </div>
                    ))
                }
            </div>
            <div class="md:flex md:items-center md:justify-between">
                <p class="text-sm mt-3 text-slate-600 font-medium flex">
                  <span class="icon-size-20  text-blue-600"><MapMarkerIcon/></span>  {location}</p>
                <p class="text-sm mt-3 text-slate-400">{posted}</p>
            </div>
           
        </div>
    </div>
</article>
