---
import Auth from "../layouts/Auth.astro"
import Smlogo from "../components/ui/smlogo.astro"
---



<Auth>
     <!-- Content -->
     <div class="w-full md:w-1">

        <div class="min-h-screen h-full flex flex-col justify-center">

            <div class="px-5 sm:px-6 py-8">
                <div class="w-full max-w-4xl mx-auto">

                    <!-- Site branding -->
                    <div class="mb-6">
                       <Smlogo></Smlogo>
                       
                    </div>
    
                    <div class="max-w-3xl pb-12 space-y-4">
                         <div class="md:flex md:items-center md:justify-between">
                            <h3 class="h3 text-slate-800">Some details about your company</h3>
                            <span class="text-xl font-semibold mt-3 text-slate-400">Step 1 / 2</span>
                         </div>
                        <p class="text-xl text-slate-500">At YourCVVideo, we provide a streamlined platform to find top talent effortlessly. Register now to post job openings, view candidate CV videos, and connect with potential hires quickly and efficiently.</p>
                    </div>

                    <!-- Form -->
                    <form>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium mb-1 " for="company_name">What is your Full Company Name? <span class="text-rose-500">*</span></label>
                                <input id="company_name" class="form-input py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" placeholder="Company Name" type="text" required="">
                            </div>
                          
                        
                            <div class="space-y-4 sm:flex sm:space-y-0 sm:space-x-4">
                                <div class="sm:w-1/2">
                                    <label class="block text-sm font-medium mb-1 " for="company_name">What is your Company Website? <span class="text-rose-500">*</span></label>
                                    <input id="company_name" class="form-input py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" placeholder="www.abc.com" type="text" required="">
                                </div>
                                <div class="sm:w-1/2">
                                    <label class="block text-sm font-medium mb-1" for="pcode">What is your LinkedIn Company Page Address?<span class="text-rose-500">*</span></label>
                                    <input id="company_name" class="form-input py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" placeholder="www.linkedin.com/company" type="text" required="">
                                   
                                </div>
                            </div>
                            <div class="space-y-4 sm:flex sm:space-y-0 sm:space-x-4">
                                <div class="sm:w-1/2">
                                    <label class="block text-sm font-medium mb-1 " for="company_name">What is Company Postal Code? <span class="text-rose-500">*</span></label>
                                    <input id="company_name" class="form-input py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" placeholder="www.abc.com" type="text" required="">
                                </div>
                                <div class="sm:w-1/2">
                                    <label class="block text-sm font-medium mb-1" for="pcode">In which Country is your Company Located?<span class="text-rose-500">*</span></label>
                                    <select id="country" class="form-select py-2 w-full  py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" required="">
                                        <option>United States</option>
                                        <option>United Kingdom</option>
                                        <option>Germany</option>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium mb-1 " for="company_name">  Which industry does your business belong to? <span class="text-rose-500">*</span></label>
                                <!-- <input id="company_name" class="form-input py-2 w-full bg-slate-50 placeholder-slate-400 font-medium placeholder-font-normal" placeholder="Company Name" type="text" required=""> -->
                                <div class="inline-flex space-x-4">
                                    <div class=" text-sm  py-2 px-3 text-slate-500 bg-slate-100 rounded-sm hover:text-slate-100 shadow-md cursor-pointer hover:bg-blue-600">Recruitment Agency </div>
                                    <div class=" text-sm  py-2 px-3 text-slate-500 bg-slate-100 rounded-sm hover:text-slate-100 shadow-md cursor-pointer hover:bg-blue-600">Hiring Organisation</div>
                        
                                </div>
                            </div>
                           
                           
                        </div>
                    
                     
                        <div class="text-right mt-8">
                            <a class="btn text-white bg-blue-600 hover:bg-blue-700 group" href="request-demo.html">
                                Go To Payment <span class="tracking-normal text-blue-300 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out ml-1">-&gt;</span>
                            </a>
                        </div>
                       
                    </form>
    
                </div>
            </div>

        </div>

    </div>

    <!-- Right side -->
    <div class="relative hidden md:block md:w-1/3 bg-slate-200" aria-hidden="true">

        <!-- Bg image -->
        <!-- <div class="absolute inset-0 aos-init aos-animate" data-aos="fade">
            <img class="opacity-10 w-full h-full object-cover" src="/images/request-demo-bg.jpg" width="760" height="900" alt="Background">
        </div> -->

        <!-- Quote -->
        <div class="flex  flex-col justify-center">
            <div class="px-5 py-12 sm:px-6">
                <div class="w-full max-w-lg mx-auto text-center">                
                    <h3 class="h3  text-slate-600 mb-4">Ready to streamline your hiring process?</h3>
                    <p class="text-slate-500 pt-4">Thousands of recruiters are already using YourCVVideo to find top talent faster and make smarter hiring decisions.</p>
                    
                </div>
            </div>
            <div class="w-full justify-end flex">
              <div>
                <img width="350px" src="https://app.crisp.chat/images/components/initiate/InitiateSignupDiscover/crm.png" alt="">
              </div>
            </div>
        </div>

    </div>
</Auth>
