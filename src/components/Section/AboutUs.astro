const howItWorks = [
  {
    step: 1,
    title: "Post Job",
    description: "Recruiters create a job posting with custom questions to assess candidates.",
    image: "/images/job_post_1.jpg",  // Replace with your actual image link
    icon: "./images/job-post.png"  // Replace with your actual icon link
  },
  {
    step: 2,
    title: "Submit Video",
    description: "Candidates submit a video application answering specific pre-screening questions tailored to the job, giving Recruiters a deeper insight into their personality, communication, and skills.",
    image: "/images/video-submit.jpg",  // Replace with your actual image link
    icon: "./images/video.png"  // Replace with your actual icon link
  },
  {
    step: 3,
    title: "Screen Candidates",
    description: "Recruiters filter out unsuitable candidates by viewing the video applications therefore saving Recruiters time. Giving immediate feedback via their Dashboard to the Candidate whether successful or unsuccessful.",
    image: "/images/ai-screening.jpg",  // Replace with your actual image link
    icon: "./images/ai-screening.png"  // Replace with your actual icon link
  },
  {
    step: 4,
    title: "Hire Talent",
    description: "If the Candidate is successful with their application, the Recruiter interviews the top selected candidates through the video platform. These are recorded and this makes the hiring decision faster, smarter and based on Human Interaction and not dependent on AI selection. Therefore that 'Gut Instinct' that Recruiters get in the recruitment process will always come into play.",
    image: "/images/interview-hire.jpg",  // Replace with your actual image link
    icon: "./images/interview-hire.png"  // Replace with your actual icon link
  }
