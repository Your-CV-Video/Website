                                <img
                                    style="width:50px"
                                    src={plan.icon}
                                    alt=""
                                />
                            </div>
                            <div class=" glow">
                                <p class="text-blue-600 text-xl font-semibold block mb-2">
                                    {plan.title}
                                </p>
                                <p class="text-black  font-semibold mb-4">
                                    {plan.price}
                                </p>
                                <p class="text-slate-500 text-md  font-medium glow mb-4">
                                    {plan.description}
                                </p>
                                
                                <p class="text-emerald-500 font-semibold mb-4">
                                    {plan.trial}
                                </p>
                                <p>
                                    <a href={plan.link} class="tracking-normal font-semibold text-blue-600 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out">
                                        {plan.cta} -&gt;
                                    </a>
