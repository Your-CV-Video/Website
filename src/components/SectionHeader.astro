---
 const {title,desc,hcolor='text-slate-800',dcolor='text-slate-500 ' ,extraTopCss="pb-8 md:pb-12 "} = Astro.props;
---
<div class={`max-w-3xl mx-auto text-center ${extraTopCss}`}>
    <h2 class={`h2  mb-4 ${hcolor}`}>
       {title}
    </h2>
    <p class={`text-xl ${dcolor} mb-8`}>
       {desc}
    </p>
</div>