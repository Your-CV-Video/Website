---
import SectionHeader from "./SectionHeader.astro";
import Section from "./Section/Section.astro";
import Badge from "./Badge.astro";
import AuthorProfile from "./Card/AuthorProfile.astro";
const {badgeLabel,title,headerDesc} = Astro.props
const {autherNameColor,autherName,autherDate,autherDateColor} = Astro.props

---


<Section relativeClass="realtive pt-12 md:pt-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="py-12 md:py-12 border-t border-slate-200">
            <Badge label={badgeLabel}></Badge>
            <SectionHeader title={title} desc={headerDesc} ></SectionHeader>
        </div>
    </div>
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <AuthorProfile nameColor={autherNameColor} name={autherName} dateColor={autherDateColor} date={autherDate}/>
        <slot></slot>
    </div>
</Section>






