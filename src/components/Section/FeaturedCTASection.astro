---
const { title, buttonText, buttonLink, imageUrl, altText } = Astro.props;
---
<section class="bg-slate-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-8 md:py-16 space-y-16">
      <div data-aos="fade-up" class="aos-init aos-animate">
        <div class="relative bg-slate-900 rounded-xs py-10 px-8 md:p-10 md:mt-12">
          <!-- Background illustration -->
          <div class="absolute right-0 bottom-0 pointer-events-none hidden lg:block" aria-hidden="true">
            <img src={imageUrl} width="456" height="337" alt={altText} />
          </div>

          <div class="relative flex flex-col lg:flex-row justify-between items-center">
            <!-- CTA content -->
            <div class="text-center lg:text-left lg:max-w-xl">
              <h3 class="h3 font-playfair-display text-slate-100 mb-8">{title}</h3>
              <div class="mb-3">
                <a class="btn text-white bg-blue-600 hover:bg-blue-700 group" href={buttonLink}>
                  {buttonText} <span class="tracking-normal text-blue-300 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out ml-1">-&gt;</span>
                </a>
              </div>
              <div class="text-sm italic text-slate-500">No credit card required. Cancel anytime!</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
